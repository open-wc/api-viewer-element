{
  "name": "api-viewer-element",
  "version": "0.4.4",
  "description": "Web Components API viewer element",
  "author": "Serhii Kulykov <iamkulykov@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/web-padawan/api-viewer-element.git"
  },
  "bugs": {
    "url": "https://github.com/web-padawan/api-viewer-element/issues"
  },
  "keywords": [
    "API",
    "documentation",
    "playground",
    "web-components",
    "webcomponents",
    "customelements",
    "custom-elements",
    "lit-element"
  ],
  "main": "lib/api-viewer.js",
  "module": "lib/api-viewer.js",
  "scripts": {
    "build": "tsc",
    "dev": "npm run watch & npm run serve",
    "dist": "rimraf dist && rollup -c rollup.config.js && cp custom-elements.json dist",
    "fixtures": "wca analyze src/fixtures/*.ts --format json --outFile custom-elements.json",
    "lint:css": "stylelint src/*.ts",
    "lint:eslint": "eslint src --ext .ts",
    "lint:lit": "lit-analyzer src --strict",
    "lint": "npm-run-all --parallel lint:*",
    "prepublishOnly": "npm run build",
    "serve": "web-dev-server --node-resolve",
    "serve:dist": "web-dev-server --app-index dist/index.html --open",
    "size": "size-limit",
    "size:why": "size-limit --why",
    "watch": "tsc-watch"
  },
  "files": [
    "lib",
    "!lib/fixtures"
  ],
  "dependencies": {
    "@types/dompurify": "^2.0.4",
    "dompurify": "^2.0.15",
    "highlight-ts": "9.12.1-2",
    "lit-element": "^2.0.0",
    "lit-html": "^1.0.0",
    "marked": "^2.0.0",
    "tslib": "^2.0.1"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^11.0.0",
    "@size-limit/preset-small-lib": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@web/dev-server": "^0.1.25",
    "@web/rollup-plugin-html": "^1.10.1",
    "deepmerge": "4.2.2",
    "eslint": "^8.0.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-lit": "1.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-wc": "^1.3.2",
    "husky": "^4.3.0",
    "lint-staged": "^10.3.0",
    "lit-analyzer": "^1.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.58.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-terser": "^7.0.2",
    "size-limit": "^6.0.0",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "1.10.0",
    "tsc-watch": "^4.5.0",
    "typescript": "^4.4.4",
    "web-component-analyzer": "^1.1.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "size-limit": [
    {
      "path": "lib/api-viewer.js",
      "limit": "38 KB"
    }
  ]
}
