{
  "name": "api-viewer-element",
  "version": "0.3.2",
  "description": "Web Components API viewer element",
  "author": "Serhii Kulykov <iamkulykov@gmail.com>",
  "license": "MIT",
  "main": "lib/api-viewer.js",
  "module": "lib/api-viewer.js",
  "scripts": {
    "build": "tsc",
    "dev": "npm run watch & npm run serve",
    "dist": "rimraf dist && rollup -c rollup.config.js && cp ./demo/*.json dist",
    "fixtures": "wca analyze src/fixtures/*.ts --format json --outFile demo/custom-elements.json",
    "lint:css": "stylelint src/*.ts",
    "lint:eslint": "eslint src --ext .ts",
    "lint:lit": "lit-analyzer src --strict",
    "lint": "npm-run-all --parallel lint:*",
    "prepublishOnly": "npm run build",
    "serve": "es-dev-server --node-resolve --port 8081",
    "serve:dist": "es-dev-server --app-index dist/index.html --open",
    "size": "size-limit",
    "size:why": "size-limit --why",
    "watch": "tsc-watch"
  },
  "files": [
    "lib",
    "!lib/fixtures"
  ],
  "dependencies": {
    "@types/dompurify": "^2.0.0",
    "dompurify": "^2.0.7",
    "highlight-ts": "^9.12.1-2",
    "lit-element": "^2.0.0",
    "lit-html": "^1.0.0",
    "marked": "^0.8.0",
    "tslib": "^1.10.0"
  },
  "devDependencies": {
    "@open-wc/building-rollup": "^0.17.0",
    "@size-limit/preset-big-lib": "^2.2.3",
    "@typescript-eslint/eslint-plugin": "^2.12.0",
    "@typescript-eslint/parser": "^2.12.0",
    "@webcomponents/webcomponentsjs": "^2.4.0",
    "es-dev-server": "^1.32.0",
    "eslint": "^6.7.2",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-lit": "^1.2.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-wc": "^1.2.0",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "lit-analyzer": "^1.1.9",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "rollup": "^1.27.13",
    "rollup-plugin-cpy": "^2.0.1",
    "stylelint": "^12.0.0",
    "stylelint-config-prettier": "^8.0.0",
    "stylelint-config-standard": "^19.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "1.9.0",
    "tsc-watch": "^4.0.0",
    "typescript": "^3.7.3",
    "web-component-analyzer": "^1.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "size-limit": [
    {
      "path": "lib/api-viewer.js",
      "limit": "32.5 KB"
    }
  ]
}
