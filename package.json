{
  "name": "api-viewer-workspace",
  "private": true,
  "license": "MIT",
  "author": "open-wc",
  "type": "module",
  "engines": {
    "node": "^14.13.1 || >=16.0.0"
  },
  "scripts": {
    "analyze": "wireit",
    "analyze:fixtures": "wireit",
    "build": "wireit",
    "clean": "wireit",
    "dev": "wireit",
    "dist": "wireit",
    "fixtures": "wireit",
    "format": "wireit",
    "format:md": "wireit",
    "format:package": "wireit",
    "format:ts": "wireit",
    "lint": "wireit",
    "lint:css": "wireit",
    "lint:eslint": "wireit",
    "lint:lit": "wireit",
    "release": "changeset publish && yarn format",
    "size": "wireit",
    "start": "wireit",
    "update:tsconfigs": "node scripts/generate-ts-configs.js",
    "watch": "wireit"
  },
  "devDependencies": {
    "@changesets/cli": "^2.25.2",
    "@custom-elements-manifest/analyzer": "^0.6.6",
    "@rocket/cli": "^0.10.1",
    "@rocket/core": "^0.1.2",
    "@rocket/launch": "^0.6.0",
    "@rocket/search": "^0.5.1",
    "@size-limit/preset-small-lib": "^8.1.0",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "@web/dev-server": "^0.1.35",
    "concurrently": "^7.6.0",
    "deepmerge": "^4.2.2",
    "eslint": "^8.28.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-lit": "^1.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-wc": "^1.3.2",
    "lint-staged": "^13.0.3",
    "lit-analyzer": "^1.2.1",
    "picocolors": "^1.0.0",
    "postcss": "^8.3.11",
    "postcss-lit": "^1.0.1",
    "prettier": "^2.7.1",
    "prettier-plugin-package": "^1.3.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.66.1",
    "simple-git-hooks": "^2.8.1",
    "size-limit": "^8.1.0",
    "stylelint": "^14.16.0",
    "stylelint-config-prettier": "^9.0.4",
    "stylelint-config-standard": "^29.0.0",
    "tsc-watch": "^5.0.3",
    "typescript": "^4.9.3",
    "wireit": "^0.8.0"
  },
  "resolutions": {
    "@mdjs/core": "^0.9.0",
    "@mdjs/mdjs-preview": "^0.5.6",
    "@rocket/drawer": "^0.1.4",
    "glob-parent": "^6.0.1",
    "prismjs": "^1.25.0",
    "pug": "^3.0.1"
  },
  "contributors": [
    {
      "name": "Serhii Kulykov",
      "email": "iamkulykov@gmail.com",
      "url": "https://twitter.com/serhiikulykov"
    },
    {
      "name": "Benny Powers",
      "email": "web@bennypowers.com",
      "url": "https://twitter.com/PowersBenny"
    },
    {
      "name": "Mikhail Bashkirov",
      "email": "bashmish@gmail.com",
      "url": "https://twitter.com/bashmish"
    }
  ],
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "wireit": {
    "analyze": {
      "command": "node scripts/workspaces-scripts-bin.js analyze"
    },
    "analyze:fixtures": {
      "command": "node scripts/workspaces-scripts-bin.js analyze fixtures"
    },
    "build": {
      "command": "tsc --build"
    },
    "clean": {
      "command": "rimraf _site"
    },
    "dev": {
      "command": "web-dev-server --node-resolve --open",
      "dependencies": [
        "watch"
      ]
    },
    "dist": {
      "command": "rocket build && cp docs/assets/* _site/assets",
      "dependencies": [
        "clean",
        "analyze",
        "fixtures"
      ]
    },
    "fixtures": {
      "command": "cp fixtures/**/custom-elements.json docs/assets",
      "dependencies": [
        "analyze:fixtures"
      ]
    },
    "format:md": {
      "command": "prettier \"**/*.md\" --write"
    },
    "format:package": {
      "command": "prettier \"**/package.json\" --write"
    },
    "format:ts": {
      "command": "prettier \"**/*.ts\" --write"
    },
    "format": {
      "dependencies": [
        "format:md",
        "format:package",
        "format:ts"
      ]
    },
    "lint:css": {
      "command": "stylelint packages/**/src/*.ts fixtures/**/src/*.ts"
    },
    "lint:eslint": {
      "command": "eslint packages fixtures scripts"
    },
    "lint:lit": {
      "command": "lit-analyzer packages/**/src/*.ts fixtures/**/src/*.ts --strict"
    },
    "lint": {
      "dependencies": [
        "lint:css",
        "lint:eslint",
        "lint:lit"
      ]
    },
    "size": {
      "command": "node scripts/workspaces-scripts-bin.js size",
      "dependencies": [
        "build"
      ]
    },
    "start": {
      "command": "rocket start"
    },
    "watch": {
      "command": "tsc-watch",
      "service": true
    }
  },
  "workspaces": [
    "packages/*",
    "fixtures/*"
  ]
}
