<h2 class="reason-header">{{ reasonHeader }}</h2>

<section class="reasons">
  {% for reason in reasons %}
    <article>
      <h3>{{ reason.header }}</h3>
      <figure>
        <img src="{{ reason.image | asset | url }}" alt="{{ reason.alt or '' }}"/>
        <figcaption>{{ reason.text | safe }}</figcaption>
      </figure>
    </article>
  {% endfor %}
</section>
